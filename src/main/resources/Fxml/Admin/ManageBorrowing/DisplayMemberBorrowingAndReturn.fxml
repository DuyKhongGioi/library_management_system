<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.zlib.Controllers.Admin.ManageBorrowings.DisplayMemberBorrowingAndReturnController">

    <VBox layoutX="18.0" layoutY="27.0" spacing="10">
        <Label text="Display Member Borrowing and Return">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>

        <VBox spacing="10">
            <AnchorPane>
                <Label layoutX="1.0" layoutY="1.0" text="Member ID" />
                <TextField fx:id="memberIdField" layoutX="100.0" layoutY="1.0" promptText="Enter Member ID" />
                <Button fx:id="searchMemberBorrowingsButton" layoutX="300.0" layoutY="1.0" text="Search Borrowings" />
                <Button fx:id="returnBookButton" layoutX="450.0" layoutY="1.0" text="Return Book" />
                <Button fx:id="exportDataButton" layoutX="600.0" layoutY="1.0" text="Export Data" />
            </AnchorPane>

            <!-- TableView for Member Borrowings -->
            <TableView fx:id="memberBorrowingsTableView" prefHeight="500.0" prefWidth="950.0">
                <columns>
                    <TableColumn fx:id="borrowingIdColumn" prefWidth="100.0" text="Borrowing ID" />
                    <TableColumn fx:id="isbnColumn" prefWidth="150.0" text="ISBN" />
                    <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                    <TableColumn fx:id="copyIdColumn" prefWidth="100.0" text="Copy ID" />
                    <TableColumn fx:id="borrowDateColumn" prefWidth="200.0" text="Borrow Date" />
                    <TableColumn fx:id="dueDateColumn" prefWidth="200.0" text="Due Date" />
                </columns>
            </TableView>
        </VBox>
    </VBox>
    <padding>
        <Insets left="15.0" />
    </padding>
</AnchorPane>
